<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_colored_land"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@mipmap/number1"
            android:onClick="onBtnStage1"
            />
        <Button
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@mipmap/number2"
            android:onClick="onBtnStage2"
            />
        <Button
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@mipmap/number3"
            android:onClick="onBtnStage3"
            />
        <Button
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@mipmap/number4"
            android:onClick="onBtnStage4"
            />
        <Button
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@mipmap/number5"
            android:onClick="onBtnStage5"
            />
    </LinearLayout>

</RelativeLayout>
